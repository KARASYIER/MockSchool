@using MockSchool.Web.ViewModels
@using MockSchool.Web.DataRepositories
@using MockSchool.Web.DataRepositories.EnumTypes
@using MockSchool.Web.Extensions;
@{
    ViewBag.Title = "学生详情";
    var photoPath = "~/images/avatars/" + Model.Student.PhotoPath ?? "noimage.png";
}

<h3>@Model.PageTitle</h3>
<div class="row m-3">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" /><!--清除突破缓存-->
                <h4>学号：@Model.Student.Id</h4>
                <h4>邮箱：@Model.Student.Email</h4>
                <h4>主修科目：@Model.Student.Major.GetDisplayName()</h4>
            </div>
            <div class="card-footer">
                <a asp-action="Index" asp-controller="Home" class="btn btn-info">返回</a>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Student.Id" class="btn btn-primary">编辑</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Student.Id" class="btn btn-danger">删除</a>

            </div>
        </div>
    </div>
</div>