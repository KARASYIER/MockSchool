@using MockSchool.Web.DataRepositories
@using MockSchool.Web.DataRepositories.EnumTypes

@model MockSchool.Web.ViewModels.StudentEditViewModel

@{ 
    ViewBag.Title = "编辑学生信息";

    var photoPath = "~/images/avatars/noimage.png";

    if(Model.ExistintPhotoPath != null)
    {
        photoPath = "~/images/avatars/" + Model.ExistintPhotoPath;
    }
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistintPhotoPath" />

    <div class="form-group row">
        <label asp-for="Name" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Name" asp-validation-for="Name" class="form-control" placeholder="请输入姓名" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Email" asp-validation-for="Email" class="form-control" placeholder="请输入电子邮箱" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Major" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Major" asp-validation-for="Major" class="custom-select" asp-items="Html.GetEnumSelectList<MajorEnum>()"></select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photos" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photos" asp-validation-for="Photos" class="custom-file-input" placeholder="" />
                <label class="custom-file-label">单击修改图片</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-sm-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
</form>


